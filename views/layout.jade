mixin ie(condition)
    | <!--[!{condition}]>
    block
    | <![endif]-->

doctype html
html
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')

        +ie('if lt IE 9')
            script(type='text/javascript', src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
            script(type='text/javascript', src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    body

        block header
            div.navbar-wrapper
                div.container
                    div.navbar.navbar-inverse.navbar-static-top(role='navigation')
                        div.container
                            div.navbar-header
                                button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                                    span.sr-only Toggle navigation
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                                a.navbar-brand(href="/") Event-Trading App

                            div.navbar-collapse.collapse
                                ul.nav.navbar-nav
                                    li(class=(title === 'Home' ? 'active' : ''))
                                        a(href="/") Home
                                    li(class=(title === 'Aktuelle Termine' ? 'active' : ''))
                                        a(href="/termine") Aktuelle Termine
                                    li(class=(title === 'Users' ? 'active' : ''))
                                        a(href="/users") Users
                                    li(class=(title === 'About' ? 'active' : ''))
                                        a(href="/about") About

        block content

        block footer
            div.container

                footer
                    ul.pull-right.list-inline
                        li
                            a(href="#") Privacy
                        li
                            a(href="#") Terms

                    p.pull-left
                        | &copy; 2014 Company, Inc.

        block scripts
            script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
            script(type='text/javascript', src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
            script(type='text/javascript', src='/javascripts/global.js')